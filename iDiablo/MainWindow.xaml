<Window x:Class="iDiablo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iDiablo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontFamily="Diablo">
    <Grid>
        <Frame Content="Frame" Background="Black"/>
        <Button Content="Start iDiablo" HorizontalAlignment="Center" Height="135" VerticalAlignment="Center" Width="478" Click="Button_Click" FontSize="72" Background="{x:Null}" BorderBrush="{x:Null}">
            <Button.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Red"/>
                    <GradientStop Color="#FFDACB26" Offset="1"/>
                </LinearGradientBrush>
            </Button.Foreground>
        </Button>
    </Grid>
</Window>
